    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- basic header stuff -->
</head>
<body>
    <h1>Todo List: </h1>
    <!-- h1 -->
    <ul class="todoItems">
        <!-- class todoItems -->
    <% for(let i=0; i < items.length; i++) {%>
        <!-- for loop through items -->
        <li class="item">
            <!-- list of item -->
            <% if(items[i].completed === true) {%>
                <!-- if statement if item.complete is true -->
                <span class='completed'><%= items[i].thing %></span>
                <!-- does the thing if true -->
            <% }else{ %>
                <span><%= items[i].thing %></span>
                <!-- creates the span if false -->
            <% } %>    
            <span class='fa fa-trash'></span>
            <!-- creates the class -->
        </li>
    <% } %>
    </ul>

    <h2>Left to do: <%= left %></h2>
    <!-- h2 -->

    <h2>Add A Todo:</h2>
    <!-- h2 -->

    <form action="/addTodo" method="POST">
        <!-- form that adds the post data -->
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <!-- type input called todoItem -->
        <input type="submit">
        <!-- submit item -->
    </form>
    

    <script src='js/main.js'></script>
</body>
</html>
